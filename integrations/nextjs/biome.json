{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"root": false,
	"extends": ["@repo/biome-config/base", "@repo/biome-config/next-js"],
	"css": {
		"assist": {
			"enabled": true
		},
		"parser": {
			"cssModules": true,
			"tailwindDirectives": true
		}
	},
	"linter": {
		"includes": ["src/**"],
		"enabled": true,
		"rules": {
			"a11y": {
				"noStaticElementInteractions": "off",
				"useKeyWithClickEvents": "off"
			}
		}
	}
}
