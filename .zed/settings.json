{
	"lsp": {
		"biome": {
			"settings": {
				"require_config_file": true,
			},
		},
	},

	"languages": {
		"JavaScript": {
			"format_on_save": "on",
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": ["format", "--write", "--stdin-file-path={buffer_path}"],
				},
			},
			"code_actions_on_format": {
				"source.organizeImports.biome": true,
				"source.fixAll.biome": true,
				"source.addMissingImports.ts": true,
				"source.removeUnusedImports": true,
			},
		},
		"TypeScript": {
			"format_on_save": "on",
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": ["format", "--write", "--stdin-file-path={buffer_path}"],
				},
			},
			"code_actions_on_format": {
				"source.organizeImports.biome": true,
				"source.fixAll.biome": true,
				"source.addMissingImports.ts": true,
				"source.removeUnusedImports": true,
			},
		},

		"TSX": {
			"format_on_save": "on",
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": ["format", "--write", "--stdin-file-path={buffer_path}"],
				},
			},
			"code_actions_on_format": {
				"source.organizeImports.biome": true,
				"source.fixAll.biome": true,
				"source.addMissingImports.ts": true,
				"source.removeUnusedImports": true,
			},
		},
		"CSS": {
			"format_on_save": "on",
			"formatter": {
				"external": {
					"command": "./node_modules/.bin/biome",
					"arguments": ["format", "--write", "--stdin-file-path={buffer_path}"],
				},
			},
			"code_actions_on_format": {
				"source.organizeImports.biome": true,
				"source.fixAll.biome": true,
				"source.addMissingImports.ts": true,
				"source.removeUnusedImports": true,
			},
		},
	},
}
